
<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

 
  <div>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category, collection: ["Model Kits", "Action Figure", "Trading Cards", "Pop!Vinyl",] %>
    <%= f.input :price %>
    <%= f.label :image %>
  </div>
  <div>
  <%= f.file_field :image %>
  </div>

  <div class="btn btn-info btn-sm mt-3 d-grid gap-2 col-6 mx-auto">
    <%= f.button :submit %>
  </div>
<% end %>
